<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Errores de Análisis</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Errores Léxicos y Sintácticos</h1>
    <table class="table table-bordered table-striped">
      <thead class="table-danger">
        <tr>
          <th>#</th>
          <th>Tipo</th>
          <th>Mensaje / Lexema</th>
          <th>Fila</th>
          <th>Columna</th>
        </tr>
      </thead>
      <tbody id="tablaErrores"></tbody>
    </table>
    <a href="/" class="btn btn-secondary mt-3">Volver al editor</a>
  </div>

  <script>
    const errores = JSON.parse(localStorage.getItem("errores") || "[]");
    const tbody = document.getElementById("tablaErrores");
    errores.forEach((error, index) => {
      const row = `<tr>
        <td>${index + 1}</td>
        <td>${error.typeTokenString}</td>
        <td>${error.mensaje || error.lexema}</td>
        <td>${error.row || "-"}</td>
        <td>${error.colum || "-"}</td>
      </tr>`;
      tbody.innerHTML += row;
    });
  </script>
</body>
</html>